{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=YOUR_DATABASE;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;"
  },
  "Buzz": {
    "UploadPath": "App_Data/uploads",
    "BuzzProcessingPath": "App_Data/processing",
    "BuzzOutputPath": "App_Data/output",
    "BuzzExecutablePath": "C:\\Program Files (x86)\\Buzz\\Buzz.exe",
    "Profiles": [
      {
        "Name": "Transcribe",
        "Task": "transcribe",
        "ModelType": "whisper",
        "ModelSize": "tiny",
        "Language": "zh",
        "OutputSrt": true
      },
      {
        "Name": "Translate",
        "Task": "translate",
        "ModelType": "fasterwhisper",
        "ModelSize": "tiny",
        "Language": "zh",
        "OutputSrt": true
      }
    ]
  },
  "AllowedHosts": "*"
}
